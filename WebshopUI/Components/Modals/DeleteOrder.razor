@using TabBlazor

@if (ShowDialog)
{

    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Delete Order</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                       Are you sure you want to delete the order: @OrderId?
                        <button type="submit" style="display: inline-flex" class="btn btn-danger"@onclick="() => DeleteOrderAsync()">DELETE</button>
                        <a style="display: inline-flex" class="btn btn-outline-primary" @onclick="@Close">Close</a>
                </div>
            </div>
        </div>
    </div>
}  
<SomethingWentWrong @ref="SomethingWentWrong"></SomethingWentWrong>